---
import BaseLayout from "@/layouts/BaseLayout.astro";
import * as mdxPost from './post-1.mdx'
import type { MarkdownInstance } from "astro";

const posts: MarkdownInstance<{ title: string }>[] = Object.values(
  import.meta.glob("./*.{md,mdx}", { eager: true }),
);

console.log(mdxPost)
---

<BaseLayout title="Blog">
  <h1>Blog page</h1>
  <ul>
    <li>
      <a href={mdxPost.url}>{mdxPost.frontmatter.title}</a>
    </li>
    {
      posts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
